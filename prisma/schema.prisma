generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  lastLogin DateTime?
}

model Feedback {
  id        Int      @id @default(autoincrement())
  content   String   // 反馈内容
  contact   String?  // 联系方式（可选）
  status    String   @default("PENDING") // PENDING待处理 | PROCESSING处理中 | COMPLETED已完成 | REJECTED已拒绝
  createdAt DateTime @default(now())     // 创建时间
}
